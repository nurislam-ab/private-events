<h1>Events</h1>

<% @events.each do |e| %>
<div class="event-block">
    <div class="event-field">
        <h3><%= e.title %></h3>
    </div>
    
    <div class="event-field">
        <h4><%= e.date %></h4>
    </div>
    
    <div class="event-field">
        <p><%= e.description %></p>
    </div>
</div>
<% end %>

